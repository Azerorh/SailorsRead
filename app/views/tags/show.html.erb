<p style="color: green"><%= notice %></p>

<%= render @tag %>

<div>
  <% if is_admin? %> 
    <%= link_to "Edit this tag", edit_tag_path(@tag), class: 'btn btn-primary' %> 
    <%= link_to "Back to tags", tags_path, class: 'btn btn-primary' %>

    <%= link_to "Destroy this tag", @tag, method: :delete, class: 'btn btn-primary' %>
  <% end %>
</div>
