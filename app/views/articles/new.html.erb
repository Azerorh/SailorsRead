<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :text, class: 'form-label' %>
    <%= f.text_area :text, class: 'form-control', rows: 3 %>
  </div>
  <div class="mb-3">
    <%= f.label :file_path, class: 'form-label' %>
    <%= f.file_field :file_path, class: 'form-control', direct_upload: true %>
    <div data-upload-target="progress"></div>
  </div>
  <div class="mb-3">
    <%= f.label :tag, class: 'form-label' %>
    <%= f.text_field :tags, class: 'form-control', value: @article.tags.map(&:name).join(',') %>
  </div>
  <div class="mb-3">
    <%= f.submit 'Add article', class: 'btn btn-primary' %>
  </div>
  
<% end %>