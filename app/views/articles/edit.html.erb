<h1>Edit article</h1>

<%= form_for @article, url: article_path(@article), method: :put do |f| %>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :text, class: 'form-label' %>
    <%= f.text_area :text, class: 'form-control', rows: 3 %>
  </div>
  <div class="mb-3">
    <%= f.submit 'Add article', class: 'btn btn-primary' %>
  </div>

<% end %>