<% if is_admin? %>
  <h1>Users list</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Username</th>
        <th scope="col">Is Admin</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td scope="row"><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td> <input type="checkbox" id="<%= user.id %><%= user.username %>" class="task-check" value="<%= user.id %>" <%= user.is_admin ? 'checked' : '' %>></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Access denied!!!</h1>
<% end %>